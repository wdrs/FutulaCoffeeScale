<!--<?xml version="1.0" encoding="utf-8"?>-->
<resources>
<!-- Centralized text styles for Settings screen -->

<style name="Futula.SettingsLabel" parent="@style/Widget.MaterialComponents.TextView">
    <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_marginStart">8dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:justificationMode">inter_word</item>
    <item name="android:autoSizeTextType">uniform</item>
    <item name="android:autoSizeMinTextSize">12sp</item>
    <item name="android:autoSizeMaxTextSize">18sp</item>
    <item name="android:autoSizeStepGranularity">1sp</item>
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:ellipsize">marquee</item>
    <item name="android:elegantTextHeight">true</item>
    <item name="android:textAlignment">textStart</item>
</style>

<style name="Futula.SettingsSwitch" parent="@style/Widget.Material3.CompoundButton.MaterialSwitch">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:hapticFeedbackEnabled">true</item>
    <item name="android:lineSpacingExtra">8sp</item>
    <item name="android:maxLines">1</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:showText">false</item>
    <item name="android:splitTrack">false</item>
    <item name="android:textSize">20sp</item>
    <item name="android:autoSizeTextType">uniform</item>
</style>

<style name="Futula.SectionHeader" parent="@style/Widget.MaterialComponents.TextView">
    <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
</style>

<style name="Futula.Spinner.Outlined" parent="@style/Widget.AppCompat.Spinner">
    <item name="android:background">@drawable/spinner_outlined_ripple</item>
    <item name="android:minHeight">48dp</item>
    <item name="android:popupBackground">?attr/colorSurface</item>
    <item name="android:dropDownVerticalOffset">4dp</item>
    <item name="android:dropDownHorizontalOffset">0dp</item>
    <item name="android:paddingStart">4dp</item>
    <item name="android:paddingEnd">56dp</item>
    <item name="android:gravity">start|center_vertical</item>
</style>

<style name="TextAppearance.Futula.SectionHeader"
    parent="@style/TextAppearance.Material3.TitleLarge" />
</resources>